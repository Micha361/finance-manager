<Window x:Class="finance_manager.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:finance_manager"
        mc:Ignorable="d"
        Title="Dashboard" Height="450" Width="800" WindowStartupLocation="CenterScreen">

  <Grid Background="#FF191A1F" HorizontalAlignment="Stretch" Height="NaN" Margin="0,0,0,0" VerticalAlignment="Stretch" Width="NaN">

    <Grid.Resources>
      <Style TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="Width" Value="180"/>
        <Setter Property="Background" Value="#FF2D2F31"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Effect">
          <Setter.Value>
            <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2"/>
          </Setter.Value>
        </Setter>
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="Button">
              <Border Background="{TemplateBinding Background}" CornerRadius="0">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
              </Border>
              <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                  <Setter Property="Background" Value="#FF3F4245"/>
                </Trigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>

      <Style TargetType="Label">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
      </Style>

      <Style TargetType="Border">
        <Setter Property="Background" Value="#FF232631"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Effect">
          <Setter.Value>
            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2"/>
          </Setter.Value>
        </Setter>
      </Style>
    </Grid.Resources>

    <StackPanel HorizontalAlignment="Left" Width="200" Background="#FF202226" Margin="10">
      <Button x:Name="homebtn" Content="Home" Width="199"/>
      <Button x:Name="transactionsbtn" Content="Transactions" Click="transactionsbtn_Click" Width="198"/>
      <Button x:Name="budgetbtn" Content="Budget" Click="budgetbtn_Click" Width="197"/>
      <Button x:Name="goalsbtn" Content="Goals" Click="goalsbtn_Click" Width="198"/>
      <Button x:Name="accountbtn" Content="Account" Width="198" Click="accountbtn_Click"/>
      <Button x:Name="logoutbtn" Content="Logout" Click="logoutbtn_Click_1" Width="199"/>
    </StackPanel>

    <Label x:Name="welcomelbl" Content="" HorizontalAlignment="Left" Margin="387,27,0,0" VerticalAlignment="Top" FontSize="18" Width="314"/>

    <Border HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="209" Margin="255,202,0,0">
      <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label x:Name="saldolbl" Content="Ihr Saldo beträgt: 0" Height="172"/>
      </StackPanel>
    </Border>

  </Grid>
</Window>
