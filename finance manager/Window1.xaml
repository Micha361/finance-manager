<Window x:Class="finance_manager.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:finance_manager"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
  <Grid Background="Black" HorizontalAlignment="Right" Width="800">
    <Label Content="home" HorizontalAlignment="Left" Margin="386,172,0,0" VerticalAlignment="Top" Foreground="White"/>
    <StackPanel Margin="0,0,625,0">
      <StackPanel.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
          <GradientStop Color="Black"/>
          <GradientStop Color="#FF5D5959" Offset="1"/>
        </LinearGradientBrush>
      </StackPanel.Background>
      <Button x:Name="homebtn" Content="Home" Height="35" Background="#FF3A3A3A" Foreground="White" FontWeight="Bold" Cursor="Hand"/>
      <Button x:Name="transactionsbtn" Content="Transactions" Height="37" Background="#FF3A3A3A" FontWeight="Bold" Foreground="White" Cursor="Hand"/>
      <Button x:Name="budgetbtn" Content="budget" Height="34" Background="#FF3A3A3A" FontWeight="Bold" Foreground="White" Cursor="Hand"/>
    </StackPanel>

  </Grid>
</Window>
