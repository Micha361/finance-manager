<Window x:Class="finance_manager.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:finance_manager"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
  <Grid Background="#FF191A1F" HorizontalAlignment="Right" Width="800">
    <StackPanel Margin="0,0,625,0">
      <StackPanel.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
          <GradientStop Color="Black"/>
          <GradientStop Color="#FF5D5959" Offset="1"/>
        </LinearGradientBrush>
      </StackPanel.Background>
      <Button x:Name="homebtn" Content="Home" Height="35" Background="#FF3A3A3A" Foreground="White" FontWeight="Bold" Cursor="Hand"/>
      <Button x:Name="transactionsbtn" Content="Transactions" Height="37" Background="#FF3A3A3A" FontWeight="Bold" Foreground="White" Cursor="Hand" Click="transactionsbtn_Click"/>
      <Button x:Name="budgetbtn" Content="Budget" Height="34" Background="#FF3A3A3A" FontWeight="Bold" Foreground="White" Cursor="Hand" Click="budgetbtn_Click"/>
    </StackPanel>
    <Grid Margin="210,208,48,41" Background="#FF232631">
      <StackPanel/>
      <Label Content="Youre saldo stands at: 0" HorizontalAlignment="Left" Margin="170,10,0,0" VerticalAlignment="Top" Width="187" Foreground="White"/>
      <Rectangle HorizontalAlignment="Center" Height="50" Stroke="White" VerticalAlignment="Top" Width="542"/>
    </Grid>
    <Label x:Name="welcomelbl" Content="Hello (Name)" HorizontalAlignment="Left" Margin="390,10,0,0" VerticalAlignment="Top" Width="182" Foreground="White" FontWeight="Bold" FontSize="18"/>

  </Grid>
</Window>
