<Window x:Class="finance_manager.addgoals"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:finance_manager"
        mc:Ignorable="d"
        Title="Add Goal" Height="450" Width="800">
  <Grid Background="#FF191A1F">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
      <TextBlock Text="Add New Goal" FontSize="24" Foreground="White" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

      <TextBlock Text="Goal Title:" Foreground="White"/>
      <TextBox x:Name="TitleBox" Margin="0,5,0,10"/>

      <TextBlock Text="Target Amount:" Foreground="White"/>
      <TextBox x:Name="TargetAmountBox" Margin="0,5,0,20"/>

      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Button x:Name="AddGoalButton" Content="Add Goal" Width="120" Margin="0,0,10,0" Background="#3CB371" Foreground="White"/>
        <Button x:Name="BackButton" Content="Back" Width="80" Background="#444" Foreground="White"/>
      </StackPanel>
    </StackPanel>
  </Grid>
</Window>
