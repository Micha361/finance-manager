<Window x:Class="finance_manager.addgoals"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:finance_manager"
        mc:Ignorable="d"
        Title="Add Goal" Height="450" Width="800">
  <Grid Background="#FF191A1F">
    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Margin="76,115,0,0">
      <TextBlock Text="Goal hinzufügen" FontSize="24" Foreground="White" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

      <TextBlock Text="Goal Titel:" Foreground="White"/>
      <TextBox x:Name="TitleBox" Margin="0,5,0,10"/>

      <TextBlock Text="Ziel Summe:" Foreground="White"/>
      <TextBox x:Name="TargetAmountBox" Margin="0,5,0,20"/>

      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Button x:Name="AddGoalButton"
        Content="Add Goal"
        Width="120"
        Margin="0,10,0,0"
        Background="#3CB371"
        Foreground="White"
        Click="AddGoalButton_Click"/>
      </StackPanel>
    </StackPanel>
    <Button x:Name="backbtn" Content="zurück" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="85" Height="32" Background="#FF2F2F2F" Foreground="White" FontWeight="Bold" Click="backbtn_Click"/>
    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Margin="455,111,0,0">
      <TextBlock Text="Sparen" FontSize="24" Foreground="White" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>


      <TextBlock Text="Wähle Ziel:" Foreground="White"/>
      <ComboBox x:Name="GoalComboBox"
          Margin="0,5,0,10"
          DisplayMemberPath="Title"
          SelectedValuePath="Id"
          Foreground="Black"
          Background="White"/>

      <TextBlock Text="Betrag:" Foreground="White"/>
      <TextBox x:Name="TargetAmountBox1" Margin="0,5,0,20"/>

      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Button x:Name="SparenButton1"
          Content="Geld Sparen"
          Width="120"
          Margin="0,10,0,0"
          Background="#3CB371"
          Foreground="White"
          Click="SaveMoneyBtn_Click"/>
      </StackPanel>
    </StackPanel>
  </Grid>
</Window>
