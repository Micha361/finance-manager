<Window x:Class="finance_manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:finance_manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="159*"/>
      <ColumnDefinition Width="241*"/>
    </Grid.ColumnDefinitions>
    <Button x:Name="loginbtn" Grid.Column="1" Content="Login" HorizontalAlignment="Left" Margin="39,251,0,0" VerticalAlignment="Top" Height="27" Width="92" Click="loginbtn_Click"/>
    <TextBox x:Name="usernametxt" Grid.Column="1" HorizontalAlignment="Left" Margin="25,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    <Label Grid.Column="1" Content="username" HorizontalAlignment="Left" Margin="22,137,0,0" VerticalAlignment="Top" Width="67"/>
    <Label Grid.Column="1" Content="password" HorizontalAlignment="Left" Margin="22,186,0,0" VerticalAlignment="Top"/>
    <PasswordBox x:Name="passwordtxt" HorizontalAlignment="Left" Margin="25,212,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1"/>

  </Grid>
</Window>
