<Window x:Class="finance_manager.register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:finance_manager"
        mc:Ignorable="d"
        Title="register" Height="450" Width="800">
  <Grid Background="#FF191A1F">
    <Button x:Name="registerbtn" Content="register" HorizontalAlignment="Left" Margin="376,293,0,0" VerticalAlignment="Top" Height="38" Width="112" Background="#FF2F2F2F" Foreground="White" FontWeight="Bold" Click="registerbtn_Click"/>
    <TextBox x:Name="registertxt" HorizontalAlignment="Left" Margin="344,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" Height="29" TextChanged="TextBox_TextChanged"/>
    <PasswordBox x:Name="passwort_txt" HorizontalAlignment="Left" Margin="344,225,0,0" VerticalAlignment="Top" Width="176" Height="30"/>
    <Label Content="username" HorizontalAlignment="Left" Margin="344,138,0,0" VerticalAlignment="Top" Width="88" Foreground="White"/>
    <Label Content="password" HorizontalAlignment="Left" Margin="344,198,0,0" VerticalAlignment="Top" Width="88" Foreground="White"/>
    <Button x:Name="loginlinkbtn" Content="login here" HorizontalAlignment="Left" Margin="373,362,0,0" VerticalAlignment="Top" Width="118" Height="29" Background="#FF22262D" Foreground="White" Click="loginlinkbtn_Click"/>

  </Grid>
</Window>
