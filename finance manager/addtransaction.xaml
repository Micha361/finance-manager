<Window x:Class="finance_manager.addtransaction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:finance_manager"
        mc:Ignorable="d"
        Title="Add Transaction" Height="450" Width="800">
    <Grid Background="#FF191A1F" Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Spacing="10">
            <TextBlock Text="Add new transaction" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <TextBlock Text="Amount:" Foreground="White"/>
            <TextBox x:Name="amountBox" Height="30"/>

            <TextBlock Text="Description:" Foreground="White"/>
            <TextBox x:Name="descriptionBox" Height="30"/>

            <TextBlock Text="Date:" Foreground="White"/>
            <DatePicker x:Name="datePicker" Height="30"/>

            <TextBlock Text="Type:" Foreground="White"/>
            <ComboBox x:Name="typeBox" Height="30">
                <ComboBoxItem Content="Income"/>
                <ComboBoxItem Content="Expense"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" Spacing="10">
                <Button x:Name="addBtn" Content="Add Transaction" Width="150" Height="35" Background="#FF2F2F2F" Foreground="White" FontWeight="Bold" Click="addBtn_Click"/>
                <Button x:Name="backBtn" Content="Back" Width="100" Height="35" Background="#FF2F2F2F" Foreground="White" FontWeight="Bold" Click="backbtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>