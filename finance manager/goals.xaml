<Window x:Class="finance_manager.goals"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:finance_manager"
        mc:Ignorable="d"
        Title="Goals" Height="450" Width="800">
  <Grid Background="#FF191A1F">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="700">
      <TextBlock Text="Deine Ziele" FontSize="24" Foreground="White" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

      <DataGrid x:Name="goalGrid"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                CanUserAddRows="False"
                Margin="64,147,81,0"
                RowHeight="32"
                FontSize="14"
                HeadersVisibility="Column"
                VerticalAlignment="Top"
                GridLinesVisibility="Horizontal"
                AlternatingRowBackground="LightGray"
                Height="277"
                SelectionChanged="goalGrid_SelectionChanged">

        <DataGrid.Columns>
          <DataGridTextColumn Header="Titel" Binding="{Binding Title}" Width="2*" />
          <DataGridTextColumn Header="Zielbetrag" Binding="{Binding TargetAmount}" Width="*" />
          <DataGridTextColumn Header="Gespart" Binding="{Binding SavedAmount}" Width="*" />
          <DataGridTextColumn Header="Noch benötigt" Binding="{Binding Remaining}" Width="*" />
        </DataGrid.Columns>
      </DataGrid>
    </StackPanel>
    <Button x:Name="backbtn"
      Content="Zurück"
      HorizontalAlignment="Left"
      VerticalAlignment="Top"
      Margin="10,10,0,0"
      Width="85"
      Height="32"
      Background="#FF2F2F2F"
      Foreground="White"
      FontWeight="Bold"
      Click="backbtn_Click"/>
    <Button x:Name="addbutton"
      Content="Hinzufügen"
      HorizontalAlignment="Left"
      VerticalAlignment="Top"
      Margin="705,10,0,0"
      Width="85"
      Height="32"
      Background="#FF2F2F2F"
      Foreground="White"
      FontWeight="Bold"
      Click="addbtn_Click"/>
  </Grid>
</Window>
