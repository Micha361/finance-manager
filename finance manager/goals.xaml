<Window x:Class="finance_manager.goals"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:finance_manager"
        mc:Ignorable="d"
        Title="Goals" Height="450" Width="800">
  <Grid Background="#FF191A1F">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="700">

      <Label Content="Label"/>
      <DataGrid x:Name="goalGrid"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          CanUserAddRows="False"
          RowHeight="32"
          FontSize="14"
          HeadersVisibility="Column"
          GridLinesVisibility="Horizontal"
          AlternatingRowBackground="LightGray"
          Height="277">

        <DataGrid.Columns>
          <DataGridTextColumn Header="Titel" Binding="{Binding Title}" Width="2*" />
          <DataGridTextColumn Header="Zielbetrag" Binding="{Binding TargetAmount}" Width="*" />
          <DataGridTemplateColumn Header="Löschen" Width="80">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <Button Content="Löschen"
                        Width="65"
                        Height="24"
                        Background="#FF3A3A3A"
                        Foreground="White"
                        FontSize="12"
                        FontWeight="Bold" />
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>
        </DataGrid.Columns>
      </DataGrid>
    </StackPanel>

    <Button x:Name="backbtn"
            Content="zurück"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="10,10,0,0"
            Width="85"
            Height="32"
            Background="#FF2F2F2F"
            Foreground="White"
            FontWeight="Bold"
            Click="backbtn_Click"/>

    <Button x:Name="addbutton"
            Content="hinzufügen"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="705,10,0,0"
            Width="85"
            Height="32"
            Background="#FF2F2F2F"
            Foreground="White"
            FontWeight="Bold"
            Click="addbtn_Click"/>

    <Label Content="Budgets"
           HorizontalAlignment="Center"
           Margin="0,43,0,0"
           VerticalAlignment="Top"
           Foreground="White"
           Height="51"
           Width="140"
           FontSize="24"
           FontWeight="Bold"/>
  </Grid>
</Window>
