<Window x:Class="finance_manager.addbudget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:finance_manager"
        mc:Ignorable="d"
        Title="Add Budget" Height="450" Width="800">
  <Grid Background="#FF191A1F">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
      <TextBlock Text="Add Budget" FontSize="24" Foreground="White" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

      <TextBlock Text="Amount:" Foreground="White"/>
      <TextBox x:Name="AmountBox" Margin="0,5,0,10"/>

      <TextBlock Text="Category:" Foreground="White"/>
      <TextBox x:Name="CategoryBox" Margin="0,5,0,10"/>

      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Button x:Name="AddButton"
        Content="Add Budget"
        Width="120"
        Margin="0,0,10,0"
        Background="#3CB371"
        Foreground="White"
        Click="AddButton_Click"/>
      </StackPanel>
    </StackPanel>
    <Button x:Name="backbtn" Content="back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="85" Height="32" Background="#FF2F2F2F" Foreground="White" FontWeight="Bold" Click="backbtn_Click"/>
  </Grid>
</Window>
