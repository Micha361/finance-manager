<Window x:Class="finance_manager.transactions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:finance_manager"
        mc:Ignorable="d"
        Title="transactions" Height="450" Width="800">
  <Grid Background="#FF191A1F">
    <Button x:Name="backbtn" Content="zurück" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="85" Height="32" Background="#FF2F2F2F" Foreground="White" FontWeight="Bold" Click="backbtn_Click"/>

    <Label Content="Ihre letztden Transaktionen" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>

    <Button x:Name="addnewtransactionbtn" Content="Add new transaction" HorizontalAlignment="Left" Margin="583,109,0,0" VerticalAlignment="Top" Height="28" Width="136" Background="#FF3A3A3A" FontWeight="Bold" Foreground="White" Click="addnewtransactionbtn_Click"/>

    <DataGrid x:Name="transactionGrid"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          CanUserAddRows="False"
          RowHeight="32"
          FontSize="14"
          HeadersVisibility="Column"
          GridLinesVisibility="Horizontal"
          AlternatingRowBackground="LightGray"
          Height="277">

      <DataGrid.Columns>
        <DataGridTextColumn Header="Datum" Binding="{Binding Date}" Width="*" />
        <DataGridTextColumn Header="Kategorie" Binding="{Binding Category}" Width="*" />
        <DataGridTextColumn Header="Betrag" Binding="{Binding Amount}" Width="*" />
        <DataGridTextColumn Header="Beschreibung" Binding="{Binding Description}" Width="2*" />
        <DataGridTemplateColumn Header="Löschen" Width="80">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <Button Content="Löschen"
                  Width="65"
                  Height="24"
                  Background="#FF3A3A3A"
                  Foreground="White"
                  FontSize="12"
                  FontWeight="Bold"
                  Click="DeleteTransaction_Click"/>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
      </DataGrid.Columns>
    </DataGrid>

  </Grid>
</Window>
